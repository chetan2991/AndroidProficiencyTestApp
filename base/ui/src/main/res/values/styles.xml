<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App logo style -->
    <style name="Widget.App.AppLogo" parent="">
        <item name="android:text">@string/app_name</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/trashhand</item>
    </style>

    <!-- AppBarLayout style -->
    <style name="Widget.App.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@animator/appbar_elevation</item>
        <item name="android:background">@color/toolbar_background</item>
    </style>

    <!-- Toolbar styles -->
    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.App.Toolbar.Title</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/toolbar_elevation</item>
    </style>

    <style name="TextAppearance.Widget.App.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/din_condensed_bold</item>
    </style>

    <!-- CardView style -->
    <style name="Widget.App.CardView" parent="">
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
    </style>

</resources>