<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                      

                 
                            
                                                       
           

    <androidx.cardview.widget.CardView
        android:id="@+id/fact_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/accent" android:tag="layout/item_list_home_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_sixteen">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/avenir"
                android:maxLines="1"
                android:tag="binding_1"          
                android:textColor="@color/black"
                android:textSize="@dimen/text_eighteen"
                tools:text="dummy title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_ten">

                <TextView
                    android:id="@+id/description_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_ten"
                    android:layout_marginRight="@dimen/margin_five"
                    android:layout_toLeftOf="@+id/content_img"
                    android:drawablePadding="@dimen/margin_five"
                    android:fontFamily="@font/avenir"
                    android:tag="binding_2"                
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_fourteen"
                    tools:text="dummy description" />

                <ImageView
                    android:id="@+id/content_img"
                    android:layout_width="@dimen/margin_one_thirty_five"
                    android:layout_height="@dimen/margin_hundred_twenty"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:tag="binding_3"              />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
         
